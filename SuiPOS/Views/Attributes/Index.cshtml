@model List<SuiPOS.ViewModels.AttributeListVM>
@{
    ViewData["Title"] = "Quản lý biến thể";
}

@await Component.InvokeAsync("PageHeader", new { title = "Biến thể" })

<div class="p-6">
    <div class="bg-white rounded-lg shadow-sm">
        <!-- Header Actions -->
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <input type="text" id="searchInput" placeholder="Tìm kiếm biến thể..." 
                       class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 w-64">
            </div>
            <button onclick="openAttributeModal()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2">
                <i class="fas fa-plus"></i>
                Thêm biến thể
            </button>
        </div>

        <!-- Attributes Table -->
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên biến thể</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số lượng giá trị</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ví dụ</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="attributesTableBody" class="divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var attr in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm font-medium text-gray-900">@attr.Name</td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">
                                        @attr.ValueCount giá trị
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    @if (attr.SampleValues.Any())
                                    {
                                        <div class="flex flex-wrap gap-1">
                                            @foreach (var val in attr.SampleValues)
                                            {
                                                <span class="px-2 py-0.5 bg-gray-100 text-gray-700 rounded text-xs">@val</span>
                                            }
                                            @if (attr.ValueCount > 3)
                                            {
                                                <span class="text-xs text-gray-400">+@(attr.ValueCount - 3) khác</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-gray-400 italic">Chưa có giá trị</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <button onclick="manageValues('@attr.Id', '@attr.Name')" class="p-2 text-green-600 hover:bg-green-50 rounded" title="Quản lý giá trị">
                                            <i class="fas fa-list"></i>
                                        </button>
                                        <button onclick="editAttribute('@attr.Id', '@attr.Name')" class="p-2 text-blue-600 hover:bg-blue-50 rounded" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button onclick="deleteAttribute('@attr.Id')" class="p-2 text-red-600 hover:bg-red-50 rounded" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="px-4 py-8 text-center text-gray-500">
                                Chưa có biến thể nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Attribute Modal -->
<div id="attributeModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-md">
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <h2 id="attributeModalTitle" class="text-lg font-bold">Thêm biến thể</h2>
            <button onclick="closeAttributeModal()" class="p-2 hover:bg-gray-100 rounded">
                <i class="fas fa-times text-gray-600"></i>
            </button>
        </div>

        <form id="attributeForm" class="p-6">
            <input type="hidden" id="attributeId">
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Tên biến thể <span class="text-red-500">*</span>
                </label>
                <input type="text" id="attributeName" required placeholder="VD: Màu sắc, Kích cỡ, ..." 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <p class="text-xs text-gray-500 mt-1">Ví dụ: Màu sắc, Kích cỡ, Dung lượng, ...</p>
            </div>

            <div class="flex justify-end gap-3">
                <button type="button" onclick="closeAttributeModal()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Hủy
                </button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Manage Values Modal -->
<div id="valuesModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-2xl max-h-[80vh] flex flex-col">
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-lg font-bold">
                Quản lý giá trị: <span id="valuesAttributeName" class="text-blue-600"></span>
            </h2>
            <button onclick="closeValuesModal()" class="p-2 hover:bg-gray-100 rounded">
                <i class="fas fa-times text-gray-600"></i>
            </button>
        </div>

        <div class="p-4 border-b border-gray-200">
            <div class="flex gap-2">
                <input type="text" id="newValueInput" placeholder="Nhập giá trị mới (VD: Đỏ, Xanh, ...)" 
                       class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button onclick="addNewValue()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    <i class="fas fa-plus"></i> Thêm
                </button>
            </div>
        </div>

        <div class="flex-1 overflow-y-auto p-4">
            <div id="valuesList" class="space-y-2">
                <div class="text-center text-gray-500 py-8">Đang tải...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/attributes.js"></script>
}
