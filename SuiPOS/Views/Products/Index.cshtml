@model IEnumerable<SuiPOS.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<style>
    .tab-button {
        padding: 12px 24px;
        border: none;
        background: transparent;
        cursor: pointer;
        font-weight: 500;
        color: #6B7280;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
    }
    .tab-button.active {
        color: #2563EB;
        border-bottom-color: #2563EB;
    }
    .tab-content {
        display: none;
    }
    .tab-content.active {
        display: block;
    }
</style>

<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200">
        <!-- Top Header Component -->
        @await Component.InvokeAsync("PageHeader", new { title = "Quản lý đơn hàng", showTabs = false })
        
        <!-- Tabs -->
        <div class="flex gap-1 px-6 border-t border-gray-200">
            <button class="tab-button active" onclick="switchTab('products')">
                Tất cả sản phẩm
            </button>
            <button class="tab-button" onclick="switchTab('categories')">
                Loại sản phẩm
            </button>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="p-6">
        <!-- Products Tab -->
        <div id="products-tab" class="tab-content active">
            <!-- Search & Filter -->
            <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
                <div class="flex items-center gap-4 mb-4">
                    <div class="flex-1 relative">
                        <input type="text" 
                               id="productSearch"
                               placeholder="Tìm kiếm sản phẩm..." 
                               class="w-full pl-10 pr-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-between gap-3 mb-4 w-full">
                    <!-- Products Count -->
                    <div>
                        <span class="text-sm text-gray-600">Có <strong>@Model.Count()</strong> sản phẩm</span>
                    </div>
                    <div class="flex gap-2">
                        <button onclick="showImportModal()" class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
                            <i class="fas fa-file-import"></i>
                            Nhập dữ liệu
                        </button>
                        <button onclick="window.location.href='@Url.Action("Create", "Products")'" class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2">
                            <i class="fas fa-plus"></i>
                            Tạo sản phẩm
                        </button>
                    </div>
                </div>

                <!-- Products Table -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b border-gray-200">
                                <tr>
                                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Sản phẩm</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Khả dụng</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Tồn</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Đặt</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Loại</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var product in Model)
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-4 py-4">
                                                <div class="flex items-center gap-3">
                                                    <img src="@(product.ImageUrl ?? "https://placehold.co/100x100/webp?text=100x100")"
                                                         alt="@product.ProductName"
                                                         class="w-12 h-12 object-cover rounded-lg">
                                                    <div>
                                                        <a href="@Url.Action("Edit", "Products", new { id = product.Id })"
                                                           class="text-sm font-medium text-blue-600 hover:underline">
                                                            @product.ProductName
                                                        </a>
                                                    </div>
                                                </div>

                                            </td>
                                            <td class="px-4 py-4 text-center text-sm">@product.Available</td>
                                            <td class="px-4 py-4 text-center text-sm">@product.Inventory</td>
                                            <td class="px-4 py-4 text-center text-sm">@product.Orders</td>
                                            <td class="px-4 py-4 text-center text-sm text-gray-600">@product.CategoryName</td>
                                            <td class="px-4 py-4 text-center">
                                                <div class="flex items-center justify-center gap-3">
                                                    <button onclick="window.location.href='@Url.Action("Edit", "Products", new { id = product.Id })'"
                                                            class="p-1.5 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Chỉnh sửa">
                                                        <i class="fas fa-edit text-lg"></i>
                                                    </button>

                                                    <button onclick="deleteProduct('@product.Id', '@product.ProductName')"
                                                            class="p-1.5 text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Xóa sản phẩm">
                                                        <i class="fas fa-trash-alt text-lg"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="px-4 py-8 text-center text-gray-500">
                                            Chưa có sản phẩm nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            </div>

            

        <!-- Categories Tab -->
        <div id="categories-tab" class="tab-content">
            <!-- Search -->
            <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
                <div class="flex items-center gap-4 mb-4">
                    <div class="flex-1 relative">
                        <input type="text" 
                               id="categorySearch"
                               placeholder="Tìm kiếm loại sản phẩm..." 
                               class="w-full pl-10 pr-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <div class="flex justify-end gap-3">
                        <button onclick="showCreateCategoryModal()" class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2">
                            <i class="fas fa-plus"></i>
                            Tạo loại sản phẩm
                        </button>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50 border-b border-gray-200">
                                <tr>
                                    <th class="px-4 py-3 text-left">
                                        <input type="checkbox" class="w-4 h-4 rounded border-gray-300">
                                    </th>
                                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Tên loại</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Số sản phẩm</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Trạng thái</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="categoriesTableBody" class="divide-y divide-gray-200">
                                <tr>
                                    <td colspan="6" class="px-4 py-8 text-center text-gray-500">
                                        <i class="fas fa-spinner fa-spin mr-2"></i>
                                        Đang tải dữ liệu...
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Category Modal -->
<div id="createCategoryModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
            <h2 class="text-lg font-bold text-gray-800">Tạo loại sản phẩm mới</h2>
            <button onclick="closeCreateCategoryModal()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <form id="categoryForm">
            @Html.AntiForgeryToken()
            
            <div class="p-6">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên loại sản phẩm <span class="text-red-500">*</span></label>
                    <input type="text" 
                           id="categoryName"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                           placeholder="Nhập tên loại sản phẩm...">
                </div>
            </div>
            
            <div class="flex items-center justify-end gap-3 p-4 border-t border-gray-200 bg-gray-50">
                <button type="button" onclick="closeCreateCategoryModal()" class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-100">
                    Hủy
                </button>
                <button type="button" onclick="createCategory()" class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Tạo loại sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Import Products Modal -->
<div id="importModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-3xl">
        <div class="flex items-center justify-between p-6 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800">Nhập danh sách sản phẩm</h2>
            <button onclick="closeImportModal()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-2xl"></i>
            </button>
        </div>
        
        <div class="p-6">
            <!-- Upload Area -->
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center mb-6">
                <input type="file" id="importFile" accept=".xlsx,.xls,.csv" class="hidden" onchange="handleFileSelect(event)">
                <label for="importFile" class="cursor-pointer">
                    <div class="mb-4">
                        <i class="fas fa-file-upload text-6xl text-gray-400"></i>
                    </div>
                    <button type="button" onclick="document.getElementById('importFile').click()" 
                            class="px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-50 inline-flex items-center gap-2">
                        <i class="fas fa-file"></i>
                        Chọn file
                    </button>
                    <p class="text-sm text-gray-500 mt-4">File chỉ được phép tới đa 50 MB</p>
                </label>
                <div id="selectedFileName" class="mt-4 text-sm text-gray-700 hidden"></div>
            </div>

            <!-- Download Templates -->
            <div class="flex items-center justify-center gap-6 mb-6">
                <a href="/templates/products-template.xlsx" download class="text-blue-600 hover:underline flex items-center gap-2">
                    <i class="fas fa-download"></i>
                    Tải mẫu Excel (.xlsx)
                </a>
                <a href="/templates/products-template.csv" download class="text-blue-600 hover:underline flex items-center gap-2">
                    <i class="fas fa-download"></i>
                    Tải mẫu CSV (.csv)
                </a>
            </div>

            <!-- Instructions Link -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <a href="#" class="text-blue-600 hover:underline flex items-center gap-2">
                    <i class="fas fa-info-circle"></i>
                    Xem hướng dẫn nhập
                </a>
            </div>
        </div>
        
        <div class="flex items-center justify-end gap-3 p-6 border-t border-gray-200 bg-gray-50">
            <button onclick="closeImportModal()" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-100">
                Hủy
            </button>
            <button id="importButton" onclick="importProducts()" disabled 
                    class="px-6 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed">
                Nhập dữ liệu
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product-management.js"></script>
    <script src="~/js/category-management.js"></script>
}
