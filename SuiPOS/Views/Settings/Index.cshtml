@{
    ViewData["Title"] = "Cấu hình";
}

<style>
    .settings-sidebar-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        color: #374151;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.2s;
    }
    .settings-sidebar-item:hover {
        background: #F3F4F6;
    }
    .settings-sidebar-item.active {
        background: #DBEAFE;
        color: #2563EB;
    }
    .invoice-preview {
        border: 1px dashed #D1D5DB;
        padding: 20px;
        background: white;
    }
</style>

<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
        <h1 class="text-xl font-bold text-gray-800">Cấu hình</h1>
        <div class="flex items-center gap-3">
            <button class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
                <i class="fas fa-map-marker-alt"></i>
                Địa điểm mặc định
            </button>
            <button class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 flex items-center gap-2">
                <i class="fas fa-print"></i>
                In thử
            </button>
            <button class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                Lưu thay đổi
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex h-[calc(100vh-73px)]">
        <!-- Left Sidebar -->
        <div class="w-80 bg-white border-r border-gray-200 p-4">
            <a href="@Url.Action("General", "Settings")" class="settings-sidebar-item">
                <i class="fas fa-cog text-lg"></i>
                <span class="font-medium">Cấu hình chung</span>
            </a>
            <a href="@Url.Action("Sales", "Settings")" class="settings-sidebar-item">
                <i class="fas fa-shopping-cart text-lg"></i>
                <span class="font-medium">Bán hàng</span>
            </a>
            <a href="@Url.Action("Shifts", "Settings")" class="settings-sidebar-item">
                <i class="fas fa-clock text-lg"></i>
                <span class="font-medium">Quản lý ca</span>
            </a>
            <a href="@Url.Action("Invoice", "Settings")" class="settings-sidebar-item active">
                <i class="fas fa-receipt text-lg"></i>
                <span class="font-medium">Hóa đơn</span>
            </a>
            <a href="@Url.Action("Payment", "Settings")" class="settings-sidebar-item">
                <i class="fas fa-credit-card text-lg"></i>
                <span class="font-medium">Phương thức thanh toán</span>
            </a>
            <a href="@Url.Action("Branches", "Settings")" class="settings-sidebar-item">
                <i class="fas fa-store text-lg"></i>
