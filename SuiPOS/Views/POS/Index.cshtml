@{
    ViewData["Title"] = "Bán hàng - POS";
}

<style>
    .order-tab {
        transition: all 0.2s ease;
    }
    .order-tab.active {
        background-color: white !important;
        border: 1px solid #e5e7eb;
    }
    .order-tab:not(.active) {
        background-color: #f3f4f6;
        border: 1px solid transparent;
    }
    .order-tab:not(.active):hover {
        background-color: #e5e7eb;
    }
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Bottom sheet animation */
    .bottom-sheet {
        transform: translateY(100%);
        transition: transform 0.3s ease-out;
    }
    .bottom-sheet.active {
        transform: translateY(0);
    }
</style>

<!-- POS Screen -->
<div class="min-h-screen bg-gray-50">
    <!-- Top Header Component -->
    @await Component.InvokeAsync("PageHeader", new { title = "Bán hàng", showTabs = true })

    <!-- Main Content: 2 Columns -->
    <div class="grid grid-cols-12 gap-0" style="height: calc(100vh - 72px);">
        
        <!-- LEFT COLUMN: Products (8 cols) -->
        <div class="col-span-8 bg-white border-r border-gray-200 flex flex-col overflow-hidden relative">
            <!-- Search Product -->
            <div class="p-4 border-b border-gray-200 flex-shrink-0">
                <div class="relative flex gap-2">
                    <div class="relative flex-1">
                        <input type="text" 
                               id="searchProductInput"
                               placeholder="Tìm sản phẩm hoặc nhập barcode" 
                               class="w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-xs bg-gray-200 px-2 py-1 rounded text-gray-600 font-medium">F2</span>
                    </div>
                </div>
                
                <div class="mt-3 flex items-center gap-2">
                    <button id="clearAllBtn" class="px-4 py-2 text-[#4b5563] rounded-lg border-[0.5px] border-[#4b5563] transition flex items-center gap-2 hover:bg-gray-50">
                        <i class="fas fa-trash"></i>
                        <span class="text-sm font-medium">Xóa tất cả</span>
                    </button>
                </div>
            </div>

            <!-- Cart Items Container -->
            <div id="cartItemsContainer" class="flex-1 overflow-y-auto">

                <!-- Empty Cart -->
                <div id="emptyCart" class="h-full flex flex-col items-center justify-center text-gray-400">
                    <i class="fas fa-shopping-cart text-6xl mb-4"></i>
                    <p class="text-lg font-medium">Giỏ hàng trống</p>
                    <p class="text-sm">Tìm sản phẩm hoặc quét barcode để thêm sản phẩm</p>
                </div>

                <!-- Cart Items List (Hidden by default) -->
                <div id="cartItems" class="hidden p-4 space-y-3">
                    <!-- Cart items will be added here dynamically -->
                </div>
            </div>

            <!-- Product List Bottom Sheet (Above Bottom Info) -->
            <div id="productListSheet" class="hidden absolute inset-x-0 top-0 z-50" style="bottom: 72px;">
                <div class="absolute inset-0 bg-black bg-opacity-50" onclick="closeProductList()"></div>
                <div class="bottom-sheet absolute -bottom-1 left-0 right-0 bg-white rounded-t-2xl shadow-2xl" style="height: calc(100% - 100px);">
                    <div class="flex flex-col h-full">
                        <!-- Handle bar -->
                        <div class="flex justify-center p-2 cursor-pointer" onclick="closeProductList()">
                            <div class="w-12 h-1 bg-gray-300 rounded-full"></div>
                        </div>

                        <!-- Header with title & filters -->
                        <div class="px-4 pb-3 border-b border-gray-200">
                            <div class="flex items-center justify-between mb-3">
                                <h2 class="text-lg font-bold">Tất cả sản phẩm</h2>
                                <button onclick="closeProductList()" class="p-2 hover:bg-gray-100 rounded-lg">
                                    <i class="fas fa-times text-gray-600"></i>
                                </button>
                            </div>
                            
                            <!-- Filters -->
                            <div class="flex gap-2 flex-wrap overflow-x-auto">
                                <select class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option>Tất cả sản phẩm</option>
                                </select>
                                <select class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option>Nhóm sản phẩm</option>
                                </select>
                                <select class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option>Loại sản phẩm</option>
                                </select>
                                <select class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option>Thương hiệu</option>
                                </select>
                            </div>
                        </div>

                        <!-- Products Grid với scroll -->
                        <div class="flex-1 overflow-y-auto p-4 bg-[#f3f4f6]">
                            <div class="grid grid-cols-4 gap-4" id="productsGrid">
                                <!-- Products will be added here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Info -->
            <div class="p-4 border-t border-gray-200 flex items-center justify-between flex-shrink-0 bg-white relative z-[60]">
                <button id="openProductListBtn" class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200">
                    <i class="fas fa-th-large text-gray-600"></i>
                    <span class="text-sm font-medium">Danh sách sản phẩm</span>
                </button>
                
                <button class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200">
                    <i class="fas fa-user text-gray-600"></i>
                    <span class="text-sm font-medium">Nhân viên bán: Nguyễn Trung Nghĩa</span>
                </button>
            </div>
        </div>

        <!-- RIGHT COLUMN: Customer & Payment (4 cols) -->
        <div class="col-span-4 bg-gray-50 flex flex-col overflow-hidden">
            <!-- Search Customer -->
            <div class="p-4 bg-white border-b border-gray-200 flex-shrink-0">
                <div class="relative mb-3">
                    <input type="text" 
                           placeholder="Tìm khách hàng" 
                           class="w-full pl-10 pr-16 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <span class="absolute right-3 top-1/2 -translate-y-1/2 text-xs bg-gray-100 px-2 py-1 rounded">F3</span>
                </div>

                <button id="addCustomerBtn" class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center justify-center gap-2">
                    <i class="fas fa-plus"></i>
                    <span class="text-sm font-medium">Thêm khách hàng</span>
                </button>
            </div>

            <!-- Order Summary -->
            <div class="flex-1 p-4 overflow-y-auto">
                <div class="space-y-2">
                    <!-- Tổng tiền hàng -->
                    <div class="flex justify-between text-sm items-center">
                        <span class="text-gray-700">Tổng tiền hàng</span>
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 text-xs px-2 py-0.5 bg-gray-100 rounded" id="totalItems">0 sản phẩm</span>
                            <span class="font-semibold" id="totalAmount">0</span>
                        </div>
                    </div>

                    <!-- Phí vận chuyển -->
                    <div class="flex justify-between text-sm items-center">
                        <span class="text-blue-600 cursor-pointer hover:underline">Phí vận chuyển</span>
                        <span class="font-semibold" id="shippingFee">0</span>
                    </div>

                    <!-- Khuyến mãi -->
                    <div class="flex justify-between text-sm items-center">
                        <span class="text-blue-600 cursor-pointer hover:underline">Khuyến mãi</span>
                        <button class="text-blue-600 text-xs flex items-center gap-1 hover:underline">
                            <i class="fas fa-gift"></i>
                            Gợi ý khuyến mãi
                        </button>
                    </div>

                    <div class="h-px bg-gray-300 my-2"></div>

                    <!-- Khách cần trả -->
                    <div class="flex justify-between font-bold">
                        <span>Khách cần trả</span>
                        <span id="customerPay">0</span>
                    </div>

                    <div class="h-px bg-gray-300 my-2"></div>

                    <!-- Khách thanh toán -->
                    <div>
                        <span class="text-sm font-medium text-gray-700 block mb-2">Khách thanh toán</span>
                        
                        <div id="paymentMethods" class="space-y-2">
                            <!-- Payment methods will be added here -->
                        </div>
                        
                        <button id="addPaymentMethodBtn" class="mt-2 text-blue-600 text-sm flex items-center gap-1 hover:underline">
                            <i class="fas fa-plus"></i>
                            Thêm phương thức
                        </button>
                    </div>

                    <!-- Tiền khách đưa -->
                    <div class="flex justify-between text-sm items-center mt-3">
                        <span class="text-gray-700 font-medium">Tiền khách đưa</span>
                        <span class="font-semibold" id="customerGive">0</span>
                    </div>

                    <!-- Tiền thừa trả khách -->
                    <div class="flex justify-between text-sm items-center">
                        <span class="text-gray-700 font-medium" id="changeLabel">Tiền thừa trả khách</span>
                        <span class="font-semibold" id="changeAmount">0</span>
                    </div>
                </div>

                <textarea placeholder="Ghi chú đơn hàng" 
                          class="w-full mt-3 p-2 text-sm border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" 
                          rows="2"></textarea>
            </div>

            <!-- Place Order Button -->
            <div class="p-4 bg-white border-t border-gray-200 flex-shrink-0">
                <button class="w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-bold flex items-center justify-center gap-2">
                    <span>Thanh toán</span>
                    <span class="text-sm font-normal bg-blue-500 px-2 py-1 rounded">F9</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Variant Selection Modal -->
<div id="variantModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-[60] flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-2xl max-h-[80vh] flex flex-col">
        <!-- Modal Header -->
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-lg font-bold">Chọn biến thể</h2>
            <button onclick="closeVariantModal()" class="p-2 hover:bg-gray-100 rounded-lg">
                <i class="fas fa-times text-gray-600"></i>
            </button>
        </div>

        <!-- Search variants -->
        <div class="p-4 border-b border-gray-200">
            <input type="text" placeholder="Tìm biến thể sản phẩm" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <!-- Variants list -->
        <div class="flex-1 overflow-y-auto p-4">
            <div id="variantsList" class="space-y-2">
                <!-- Variants will be added here -->
            </div>
        </div>
    </div>
</div>

<!-- Add Customer Modal -->
<div id="addCustomerModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-xl">
        <!-- Modal Header -->
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-lg font-bold">Tạo khách hàng mới</h2>
            <button onclick="closeAddCustomer()" class="p-2 hover:bg-gray-100 rounded-lg">
                <i class="fas fa-times text-gray-600"></i>
            </button>
        </div>

        <!-- Form Content - G?n h?n, không scroll -->
        <div class="p-4 space-y-3">
            <!-- Họ và tên -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                <input type="text" placeholder="Họ và tên" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <!-- Số điện thoại & Email -->
            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input type="tel" placeholder="Số điện thoại" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" placeholder="Email" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <!-- Ngày sinh & Giới tính -->
            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ngày sinh</label>
                    <input type="date" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Giới tính</label>
                    <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option>Chọn giới tính</option>
                        <option>Nam</option>
                        <option>Nữ</option>
                        <option>Khác</option>
                    </select>
                </div>
            </div>

            <!-- Quốc gia -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Quốc gia</label>
                <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option>Vietnam</option>
                    <option>Thailand</option>
                    <option>Singapore</option>
                </select>
            </div>

            <!-- Khu vực -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Khu vực</label>
                <input type="text" placeholder="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <!-- Địa chỉ -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                <input type="text" placeholder="Địa chỉ" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="p-4 border-t border-gray-200 flex gap-3 justify-end">
            <button onclick="closeAddCustomer()" class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50">
                Hủy <span class="text-xs ml-1">ESC</span>
            </button>
            <button class="px-4 py-2 text-sm bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                Lưu <span class="text-xs ml-1">F8</span>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pos/cart.js"></script>
    <script src="~/js/pos/payment.js"></script>
    <script src="~/js/pos/ui-events.js"></script>
}
