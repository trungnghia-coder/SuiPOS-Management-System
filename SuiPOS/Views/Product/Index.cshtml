@model List<SuiPOS.ViewModels.ProductVM>

@{
    ViewData["Title"] = "Danh sách s?n ph?m";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-box-seam"></i> Danh sách s?n ph?m</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm s?n ph?m m?i
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">Hình ?nh</th>
                            <th>Tên s?n ph?m</th>
                            <th>Danh m?c</th>
                            <th>S? variants</th>
                            <th style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" 
                                                 class="img-thumbnail" 
                                                 style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                                 style="width: 60px; height: 60px;">
                                                <i class="bi bi-image text-white fs-4"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@product.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@product.CategoryName</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @product.Variants.Count variant(s)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@product.Id" 
                                               class="btn btn-sm btn-info" 
                                               title="Chi ti?t">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@product.Id" 
                                               class="btn btn-sm btn-warning" 
                                               title="S?a">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button onclick="deleteProduct('@product.Id')" 
                                                    class="btn btn-sm btn-danger" 
                                                    title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-inbox fs-1 text-muted"></i>
                                    <p class="text-muted mt-2">Ch?a có s?n ph?m nào</p>
                                    <a asp-action="Create" class="btn btn-primary mt-2">
                                        <i class="bi bi-plus-circle"></i> Thêm s?n ph?m ??u tiên
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteProduct(id) {
            if (confirm('B?n có ch?c ch?n mu?n xóa s?n ph?m này?\nThao tác này không th? hoàn tác!')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Product")',
                    type: 'POST',
                    data: { id: id },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert('L?i: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        alert('Có l?i x?y ra khi xóa s?n ph?m!');
                        console.error(error);
                    }
                });
            }
        }
    </script>
}
