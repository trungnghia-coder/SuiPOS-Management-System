@model SuiPOS.ViewModels.ProductInputVM

@{
    ViewData["Title"] = "Thêm s?n ph?m m?i";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> Thêm s?n ph?m m?i</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay l?i
            </a>
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thông tin c? b?n</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên s?n ph?m <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Nh?p tên s?n ph?m" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Danh m?c <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="">-- Ch?n danh m?c --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Hình ?nh s?n ph?m</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <small class="text-muted">Ch?p nh?n: JPG, PNG, GIF, WEBP. T?i ?a 5MB</small>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Phiên b?n s?n ph?m (Variants)</h5>
            </div>
            <div class="card-body">
                <div id="variants-container">
                    <p class="text-muted">Thêm ít nh?t 1 phiên b?n s?n ph?m</p>
                </div>
                <button type="button" class="btn btn-success" onclick="addVariant()">
                    <i class="bi bi-plus-circle"></i> Thêm phiên b?n
                </button>
                <span asp-validation-for="Variants" class="text-danger d-block mt-2"></span>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save"></i> L?u s?n ph?m
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> H?y
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let variantIndex = 0;
        let attributes = [];

        // Load attributes khi trang load
        $(document).ready(function() {
            loadAttributes();
        });

        function loadAttributes() {
            $.get('@Url.Action("GetAttributes", "Product")', function(data) {
                attributes = data;
            });
        }

        function addVariant() {
            const html = `
                <div class="card mb-3 variant-item" id="variant-${variantIndex}">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label>SKU <span class="text-danger">*</span></label>
                                <input type="text" name="Variants[${variantIndex}].SKU" 
                                       class="form-control" placeholder="AT-001" required />
                            </div>
                            <div class="col-md-3">
                                <label>Giá <span class="text-danger">*</span></label>
                                <input type="number" name="Variants[${variantIndex}].Price" 
                                       class="form-control" min="0" step="1000" required />
                            </div>
                            <div class="col-md-3">
                                <label>S? l??ng <span class="text-danger">*</span></label>
                                <input type="number" name="Variants[${variantIndex}].Stock" 
                                       class="form-control" min="0" value="0" required />
                            </div>
                            <div class="col-md-3">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-danger w-100" 
                                        onclick="removeVariant(${variantIndex})">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </div>
                        </div>
                        <div class="mt-3" id="attributes-${variantIndex}">
                            <label>Thu?c tính (ch?n ít nh?t 1)</label>
                            <div class="d-flex flex-wrap gap-2">
                                <!-- Attributes s? ???c load ??ng -->
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('#variants-container').append(html);
            loadAttributesForVariant(variantIndex);
            variantIndex++;
        }

        function loadAttributesForVariant(index) {
            if (attributes.length === 0) {
                $('#attributes-' + index).html('<p class="text-warning">Ch?a có thu?c tính nào</p>');
                return;
            }

            let html = '<div class="d-flex flex-wrap gap-2">';
            attributes.forEach(attr => {
                attr.values.forEach(val => {
                    html += `
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" 
                                   name="Variants[${index}].SelectedAttributeValueIds" 
                                   value="${val.id}" 
                                   id="attr_${index}_${val.id}">
                            <label class="form-check-label" for="attr_${index}_${val.id}">
                                ${attr.name}: ${val.value}
                            </label>
                        </div>
                    `;
                });
            });
            html += '</div>';
            $('#attributes-' + index).html(html);
        }

        function removeVariant(index) {
            if (confirm('Xóa phiên b?n này?')) {
                $('#variant-' + index).remove();
            }
        }
    </script>
}

