@model SuiPOS.ViewModels.ProductInputVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-pencil"></i> Edit Product</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Basic Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Product Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">New Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <small class="text-muted">Leave empty if you don't want to change</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Image</label>
                                <div>
                                    <img src="@Model.ExistingImageUrl" alt="Current" 
                                         class="img-thumbnail" style="max-height: 100px;" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> 
                    Product Variants
                </h5>
            </div>
            <div class="card-body">
                <div id="variants-container">
                    @if (Model.Variants != null && Model.Variants.Any())
                    {
                        for (int i = 0; i < Model.Variants.Count; i++)
                        {
                            <div class="card mb-3 variant-item" id="variant-@i">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>SKU <span class="text-danger">*</span></label>
                                            <input type="text" name="Variants[@i].SKU" 
                                                   class="form-control" 
                                                   value="@Model.Variants[i].SKU" 
                                                   required />
                                        </div>
                                        <div class="col-md-3">
                                            <label>Price <span class="text-danger">*</span></label>
                                            <input type="number" name="Variants[@i].Price" 
                                                   class="form-control" 
                                                   value="@Model.Variants[i].Price" 
                                                   min="0" step="1000" required />
                                        </div>
                                        <div class="col-md-3">
                                            <label>Stock <span class="text-danger">*</span></label>
                                            <input type="number" name="Variants[@i].Stock" 
                                                   class="form-control" 
                                                   value="@Model.Variants[i].Stock" 
                                                   min="0" required />
                                        </div>
                                        <div class="col-md-3">
                                            <label>&nbsp;</label>
                                            <button type="button" class="btn btn-danger w-100" 
                                                    onclick="removeVariant(@i)">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mt-3" id="attributes-@i">
                                        <label>Attributes (select at least 1)</label>
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var attr in ViewBag.Attributes)
                                            {
                                                foreach (var val in attr.Values)
                                                {
                                                    var isChecked = Model.Variants[i].SelectedAttributeValueIds.Contains(val.Id);
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" 
                                                               name="Variants[@i].SelectedAttributeValueIds" 
                                                               value="@val.Id" 
                                                               id="attr_@(i)_@val.Id"
                                                               @(isChecked ? "checked" : "") />
                                                        <label class="form-check-label" for="attr_@(i)_@val.Id">
                                                            @attr.Name: @val.Value
                                                        </label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No variants yet. Add at least one variant.</p>
                    }
                </div>
                <button type="button" class="btn btn-success" onclick="addVariant()">
                    <i class="bi bi-plus-circle"></i> Add Variant
                </button>
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="bi bi-save"></i> Update Product
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let variantIndex = @(Model.Variants?.Count ?? 0);
        let attributes = [];

        $(document).ready(function() {
            loadAttributes();
        });

        function loadAttributes() {
            $.get('@Url.Action("GetAttributes", "Product")', function(data) {
                attributes = data;
            });
        }

        function addVariant() {
            const html = `
                <div class="card mb-3 variant-item" id="variant-${variantIndex}">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label>SKU <span class="text-danger">*</span></label>
                                <input type="text" name="Variants[${variantIndex}].SKU" 
                                       class="form-control" placeholder="AT-001" required />
                            </div>
                            <div class="col-md-3">
                                <label>Price <span class="text-danger">*</span></label>
                                <input type="number" name="Variants[${variantIndex}].Price" 
                                       class="form-control" min="0" step="1000" required />
                            </div>
                            <div class="col-md-3">
                                <label>Stock <span class="text-danger">*</span></label>
                                <input type="number" name="Variants[${variantIndex}].Stock" 
                                       class="form-control" min="0" value="0" required />
                            </div>
                            <div class="col-md-3">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-danger w-100" 
                                        onclick="removeVariant(${variantIndex})">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                        <div class="mt-3" id="attributes-${variantIndex}">
                            <label>Attributes (select at least 1)</label>
                            <div class="d-flex flex-wrap gap-2">
                                <!-- Attributes will be loaded dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
            `;

            $('#variants-container').append(html);
            loadAttributesForVariant(variantIndex);
            variantIndex++;
        }

        function loadAttributesForVariant(index) {
            if (attributes.length === 0) {
                $('#attributes-' + index).html('<p class="text-warning">No attributes available</p>');
                return;
            }

            let html = '<div class="d-flex flex-wrap gap-2">';
            attributes.forEach(attr => {
                attr.values.forEach(val => {
                    html += `
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" 
                                   name="Variants[${index}].SelectedAttributeValueIds" 
                                   value="${val.id}" 
                                   id="attr_${index}_${val.id}">
                            <label class="form-check-label" for="attr_${index}_${val.id}">
                                ${attr.name}: ${val.value}
                            </label>
                        </div>
                    `;
                });
            });
            html += '</div>';
            $('#attributes-' + index).html(html);
        }

        function removeVariant(index) {
            if (confirm('Delete this variant?')) {
                $('#variant-' + index).remove();
            }
        }
    </script>
}

