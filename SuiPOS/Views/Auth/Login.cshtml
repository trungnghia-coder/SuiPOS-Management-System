@model SuiPOS.DTOs.Auth.LoginDto
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuiPOS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="w-full max-w-md">
            <!-- Logo/Brand -->
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-blue-600 mb-2">
                    <i class="fas fa-store"></i> SuiPOS
                </h1>
                <p class="text-gray-600">Hệ thống quản lý bán hàng</p>
            </div>

            <!-- Login Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Đăng nhập</h2>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                        <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        <span asp-validation-summary="All" class="text-sm"></span>
                    </div>
                }

                <form method="post" asp-action="Login" asp-controller="Auth">
                    @Html.AntiForgeryToken()

                    <!-- Username -->
                    <div class="mb-4">
                        <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-user mr-1"></i>Tên đăng nhập
                        </label>
                        <input asp-for="Username" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-6">
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-lock mr-1"></i>Mật khẩu
                        </label>
                        <input asp-for="Password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="mb-6 flex items-center">
                        <input asp-for="RememberMe" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="RememberMe" class="ml-2 text-sm text-gray-700">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-200 font-semibold">
                        <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                    </button>
                </form>

                <!-- Register Link -->
                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">
                        Chưa có tài khoản? 
                        <a asp-action="Register" asp-controller="Auth" class="text-blue-600 hover:text-blue-700 font-medium">
                            Đăng ký ngay
                        </a>
                    </p>
                </div>
            </div>

            <!-- Footer -->
            <div class="text-center mt-8 text-gray-600 text-sm">
                <p>&copy; 2024 SuiPOS. All rights reserved.</p>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
