@{
    ViewData["Title"] = "Tra cứu đơn hàng";
}

@section Scripts {
    <script src="~/js/orders.js"></script>
}

@Html.AntiForgeryToken()

<style>
    .order-status-badge {
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 500;
    }
    .status-payed {
        background: #D1FAE5;
        color: #065F46;
    }
</style>

<div class="min-h-screen bg-gray-50">
    @await Component.InvokeAsync("PageHeader", new { title = "Tra cứu đơn hàng", showTabs = false })

    <div class="grid grid-cols-12 gap-4 p-6" style="height: calc(100vh - 72px);">
        
        <!-- LEFT: Order List -->
        <div class="col-span-4 bg-white rounded-lg shadow-sm flex flex-col overflow-hidden">
            <div class="p-4 border-b border-gray-200">
                <div class="relative mb-3">
                    <input type="text" 
                           id="searchInput"
                           placeholder="Mã đơn hàng, Tên khách hàng" 
                           class="w-full pl-10 py-2.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                </div>

                <div class="flex gap-2">
                    <div class="flex-1">
                        <label class="block text-xs font-medium text-gray-600 mb-1">Từ ngày</label>
                        <input type="date" 
                               id="fromDate"
                               class="w-full px-3 py-2.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div class="flex items-center pt-6">
                        <i class="fa-solid fa-arrow-right text-gray-400"></i>
                    </div>
                    <div class="flex-1">
                        <label class="block text-xs font-medium text-gray-600 mb-1">Đến ngày</label>
                        <input type="date" 
                               id="toDate"
                               class="w-full px-3 py-2.5 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
            </div>

            <div id="orderList" class="flex-1 overflow-y-auto">
                <!-- Orders will be loaded here -->
            </div>
        </div>

        <!-- RIGHT: Order Detail (8 cols) -->
        <div id="orderDetailContainer" class="col-span-8 bg-white rounded-lg shadow-sm flex flex-col overflow-hidden">
            <!-- Empty State -->
            <div class="flex items-center justify-center h-full">
                <div class="text-center text-gray-400">
                    <i class="fas fa-receipt text-6xl mb-4"></i>
                    <p class="text-lg font-medium">Chọn đơn hàng để xem chi tiết</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Modal -->
<div id="cancelOrderModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-4xl max-h-[90vh] overflow-hidden flex flex-col">
        <!-- Modal Header -->
        <div class="flex items-center justify-between p-4 border-b border-gray-200">
            <h2 class="text-lg font-bold text-gray-800">Hủy đơn hàng</h2>
            <button onclick="closeCancelModal()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="flex-1 overflow-y-auto p-6">
            <!-- Warning Message -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                <p class="text-sm text-gray-700 mb-2">
                    Trong trường hợp đơn hàng giả mạo, khách hàng thay đổi nhu cầu hoặc hết hàng, Haravan đề nghị bạn nên hủy đơn hàng.
                </p>
                <p class="text-sm text-gray-700">
                    Hủy bỏ một đơn đặt hàng thao tác không thể phục hồi lại.
                </p>
            </div>

            <!-- Cancel Reason -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Lý do hủy đơn hàng</label>
                <select id="cancelReason" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="" selected disabled>Chọn lý do</option>
                    <option value="out_of_stock">Hết hàng</option>
                    <option value="customer_request">Khách hàng yêu cầu</option>
                    <option value="fake_order">Đơn hàng giả</option>
                    <option value="duplicate">Đơn hàng trùng</option>
                    <option value="other">Lý do khác</option>
                </select>
            </div>

            <!-- Note -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Ghi chú</label>
                <textarea id="cancelNote" 
                          rows="3" 
                          placeholder="Ghi chú khi hủy đơn hàng..."
                          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <!-- Refund Payment Section -->
            <div class="border-t border-gray-200 pt-4">
                <h3 class="text-base font-semibold text-gray-800 mb-4">Hoàn trả thanh toán</h3>
                
                <!-- Products Table -->
                <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="text-left py-2 px-3 font-medium text-gray-700">Tên sản phẩm</th>
                                <th class="text-right py-2 px-3 font-medium text-gray-700">Giá</th>
                                <th class="text-center py-2 px-3 font-medium text-gray-700">Đặt mua</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-b border-gray-200">
                                <td class="py-3 px-3">
                                    <a href="#" class="text-blue-600 hover:underline text-sm">
                                        Bộ Tole dài tay con Nitimo họa tiết Bông Sắc Nét Độ Bền Cao
                                    </a>
                                    <div class="text-xs text-gray-500 mt-1">Xám Loang / 2XL (63Kg-67Kg)</div>
                                </td>
                                <td class="text-right py-3 px-3">229,000 đ</td>
                                <td class="text-center py-3 px-3">1</td>
                            </tr>
                            <tr class="border-b border-gray-200">
                                <td class="py-3 px-3">
                                    <a href="#" class="text-blue-600 hover:underline text-sm">
                                        Bộ Tole dài tay con Nitimo họa tiết Bông Sắc Nét Độ Bền Cao
                                    </a>
                                    <div class="text-xs text-gray-500 mt-1">Xám Loang / 3XL (68Kg-74Kg)</div>
                                </td>
                                <td class="text-right py-3 px-3">229,000 đ</td>
                                <td class="text-center py-3 px-3">1</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="flex items-center justify-end gap-3 p-4 border-t border-gray-200 bg-gray-50">
            <button onclick="closeCancelModal()" class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-100">
                Không
            </button>
            <button onclick="confirmCancelOrder()" class="px-4 py-2 text-sm bg-red-600 text-white rounded-lg hover:bg-red-700">
                Hủy đơn hàng
            </button>
        </div>
    </div>
</div>

