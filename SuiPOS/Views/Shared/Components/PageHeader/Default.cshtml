@{
    var title = ViewBag.Title as string ?? "SuiPOS";
    var showTabs = ViewBag.ShowTabs as bool? ?? false;
}

<!-- Top Header -->
<div class="bg-white border-b border-gray-200 px-6 py-3">
    <div class="flex items-center justify-between">
        <!-- Left: Title or Tabs -->
        <div class="flex items-center gap-2">
            @if (showTabs)
            {
                <!-- Tabs Container cho POS -->
                <div id="tabs-container" class="flex items-center gap-2">
                    <div class="order-tab active flex items-center gap-2 px-4 py-2 rounded-lg cursor-pointer" data-order-id="1">
                        <span class="font-medium text-gray-700">Đơn 1</span>
                        <button class="text-gray-400 hover:text-red-500" onclick="event.stopPropagation(); removeTab(this)">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <button id="addOrderBtn" class="w-9 h-9 flex items-center justify-center bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            }
            else
            {
                <!-- Title cho các trang khác -->
                <h1 class="text-xl font-bold text-gray-800">@title</h1>
            }
        </div>

        <!-- Right: Actions & User (giống nhau cho tất cả trang) -->
        <div class="flex items-center gap-3">
            <button onclick="openInvoicePreview()" class="p-2 hover:bg-gray-100 rounded-lg" title="Xem trước & In hóa đơn">
                <i class="fas fa-print text-gray-600"></i>
            </button>
            
            <!-- User Dropdown -->
            <div class="relative">
                <button id="userMenuBtn" class="flex items-center gap-2 hover:bg-gray-100 rounded-lg p-2">
                    <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                        @{
                            var staffName = Context.Request.Cookies["staff_name"] ?? "User";
                            var staffRole = Context.Request.Cookies["staff_role"] ?? "Staff";

                            var initials = string.Join("", staffName.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                            .Select(n => n.FirstOrDefault()));
                        }
                        @initials.ToUpper()
                    </div>
                    <div class="text-left hidden md:block">
                        <p class="text-sm font-medium text-gray-700">@staffName</p>
                        <p class="text-xs text-gray-500">@staffRole</p>
                    </div>
                    <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
                </button>
                
                <!-- Dropdown Menu -->
                <div id="userMenuDropdown" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                    <div class="p-3 border-b border-gray-200">
                        <p class="text-sm font-medium text-gray-700">@staffName</p>
                        <p class="text-xs text-gray-500">@staffRole</p>
                    </div>
                    <div class="py-2">
                        <a href="#" class="flex items-center gap-3 px-4 py-2 hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-user w-4"></i>
                            <span class="text-sm">Thông tin cá nhân</span>
                        </a>
                        <a href="#" class="flex items-center gap-3 px-4 py-2 hover:bg-gray-50 text-gray-700">
                            <i class="fas fa-cog w-4"></i>
                            <span class="text-sm">Cài đặt</span>
                        </a>
                    </div>
                    <div class="border-t border-gray-200 py-2">
                        <form method="post" asp-action="Logout" asp-controller="Auth">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full flex items-center gap-3 px-4 py-2 hover:bg-red-50 text-red-600">
                                <i class="fas fa-sign-out-alt w-4"></i>
                                <span class="text-sm font-medium">Đăng xuất</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
