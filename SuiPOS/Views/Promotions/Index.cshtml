@model List<SuiPOS.ViewModels.PromotionListVM>
@{
    ViewData["Title"] = "Quản lý khuyến mãi";
}

@await Component.InvokeAsync("PageHeader", new { title = "Khuyến mãi" })

<div class="p-6">
    <div class="bg-white rounded-lg shadow-sm">
        <!-- Header Actions -->
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <input type="text" id="searchInput" placeholder="Tìm kiếm khuyến mãi..." 
                       class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 w-64">
            </div>
            <button onclick="openPromotionModal()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2">
                <i class="fas fa-plus"></i>
                Thêm khuyến mãi
            </button>
        </div>

        <!-- Promotions Table -->
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mã</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Loại</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Giá trị</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Đơn tối thiểu</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Thời gian</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Trạng thái</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Thao tác</th>
                    </tr>
                </thead>
                <tbody id="promotionsTableBody" class="divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var promo in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm font-medium text-gray-900">@promo.Name</td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs font-mono">@promo.Code</span>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    @if (promo.Type == "Percentage")
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs">Phần trăm</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded text-xs">Số tiền</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    @if (promo.Type == "Percentage")
                                    {
                                        <text>@promo.DiscountValue%</text>
                                    }
                                    else
                                    {
                                        <text>@promo.DiscountValue.ToString("N0")đ</text>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    @(promo.MinOrderAmount.HasValue ? promo.MinOrderAmount.Value.ToString("N0") + "đ" : "-")
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600">
                                    <div>@promo.StartDate.ToString("dd/MM/yyyy")</div>
                                    <div class="text-xs text-gray-400">đến @promo.EndDate.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td class="px-4 py-3 text-sm">
                                    @if (promo.IsValid)
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                                            <i class="fas fa-check-circle"></i> Đang áp dụng
                                        </span>
                                    }
                                    else if (promo.IsActive)
                                    {
                                        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs font-medium">
                                            <i class="fas fa-clock"></i> Chờ áp dụng
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-medium">
                                            <i class="fas fa-ban"></i> Ngừng
                                        </span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <button onclick="editPromotion('@promo.Id')" class="p-2 text-blue-600 hover:bg-blue-50 rounded" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button onclick="togglePromotionActive('@promo.Id')" class="p-2 text-yellow-600 hover:bg-yellow-50 rounded" title="@(promo.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                            <i class="fas fa-@(promo.IsActive ? "toggle-on" : "toggle-off")"></i>
                                        </button>
                                        <button onclick="deletePromotion('@promo.Id')" class="p-2 text-red-600 hover:bg-red-50 rounded" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-4 py-8 text-center text-gray-500">
                                Chưa có khuyến mãi nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Promotion Modal -->
<div id="promotionModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full max-w-2xl">
        <div class="p-4 border-b border-gray-200 flex items-center justify-between">
            <h2 id="modalTitle" class="text-lg font-bold">Thêm khuyến mãi</h2>
            <button onclick="closePromotionModal()" class="p-2 hover:bg-gray-100 rounded">
                <i class="fas fa-times text-gray-600"></i>
            </button>
        </div>

        <form id="promotionForm" class="p-6">
            <input type="hidden" id="promotionId">
            
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên khuyến mãi <span class="text-red-500">*</span></label>
                    <input type="text" id="promotionName" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mã khuyến mãi <span class="text-red-500">*</span></label>
                    <input type="text" id="promotionCode" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Loại giảm giá <span class="text-red-500">*</span></label>
                    <select id="discountType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" onchange="updateDiscountLabel()">
                        <option value="Percentage">Phần trăm (%)</option>
                        <option value="FixedAmount">Số tiền cố định (đ)</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <span id="discountValueLabel">Giá trị giảm (%)</span> <span class="text-red-500">*</span>
                    </label>
                    <input type="number" id="discountValue" required min="0" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Đơn hàng tối thiểu (đ)</label>
                    <input type="number" id="minOrderAmount" min="0" step="1000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Giảm tối đa (đ)</label>
                    <input type="number" id="maxDiscountAmount" min="0" step="1000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ngày bắt đầu <span class="text-red-500">*</span></label>
                    <input type="datetime-local" id="startDate" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Ngày kết thúc <span class="text-red-500">*</span></label>
                    <input type="datetime-local" id="endDate" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="mb-4">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" id="isActive" checked class="w-4 h-4 text-blue-600 rounded">
                    <span class="text-sm font-medium text-gray-700">Kích hoạt ngay</span>
                </label>
            </div>

            <div class="flex justify-end gap-3">
                <button type="button" onclick="closePromotionModal()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Hủy
                </button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/promotions.js"></script>
}
